{
  "extends": "eslint:recommended",
  "rules": {
    "indent": [2, 2, { "SwitchCase": 1 }],
    "quotes": [2, "single"],
    "linebreak-style": [2, "unix"],
    "semi": [2, "always"],
    "no-console": 0,
    "keyword-spacing": [2, { "before": true, "after": true }]  // Replaces "space-after-keywords"
  },
  "env": {
    "es2021": true,  // Set ECMAScript version to 2021 for modules
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "sourceType": "module",  // Enable ESM support
    "ecmaVersion": 2021  // Or "latest" for the most recent ECMAScript features
  },
  "globals": {}
}
